/* pages/marked/marked.wxss */
@import '/templates/wxParse/wxParse';

.container.page-marked {
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}
.page-marked .nav-top {
  height: 3em;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
}
.nav-bar .menu {
  position: absolute;
  width: 100%;
  height: 450rpx;
  z-index: 5;
  background-color: aquamarine;
  display: none;
}
.nav-bar .menu.active {
  display: flex;
}
/*下拉菜单 end*/
.page-marked .content{
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}
.list-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}
/*内容列表 end*/
.page-marked .bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(1, 1, 1, .5);
  display: none;
}
.page-marked .bg.active {
  display: flex;
}
/*透明遮罩层 end*/