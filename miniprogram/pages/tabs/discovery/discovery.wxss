page {
  height: 100%;
  background-color: #fff;
}
.page-discovery .search-bar {
  padding: 24rpx 48rpx;
  background: #fff;
}
.search-bar .search-radius {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  padding: 0 28rpx;
  height: 72rpx;
  border-radius: 72rpx;
  box-shadow:2px 2px 10px 0px rgba(0,0,0,0.15);
}
.search-bar .search-radius .icon {
  width: 48rpx;
  height: 48rpx;
}
.search-bar .search-radius text {
  margin-left: 15rpx;
}

.page-discovery .content {
  display: flex;
  flex: 1;
}

