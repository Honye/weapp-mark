
.dropdown-menu-backdrop {
    position: fixed;
    top: calc(74rpx + 3em);
    left: 0;
    z-index: 11;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.4);
}
.dropdown-menu-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    max-width: 500px;
    margin: auto;
    z-index: 12;
}
.dropdown-menu {
    width: auto;
    z-index: 11;
    overflow: hidden;
    background-color: #fff;
    font-size: .8em;
}
.dropdown-menu .item-container {
  display: flex;
  align-items: center;
  padding: 20rpx 20rpx;
}
.dropdown-menu .item-container:not(:last-child) {
  border-bottom: .5px solid #ddd;
}
.item-container .icon {
  width: 1.3em;
  height: 1.3em;
  margin-right: .5em;
  display: flex;
  align-items: center;
}
.item-container .icon>image {
  width: 100%;
  height: 100%;
}
