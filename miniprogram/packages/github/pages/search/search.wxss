.search-bar {
  position: sticky;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  align-items: stretch;
  padding: 20rpx 30rpx;
}
.search-bar__input {
  flex: 1;
  background-color: #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 10rpx 18rpx;
}
.search-bar__btn {
  margin-left: 20rpx;
  background-color: var(--color-primary);
  font-size: 26rpx;
  padding: .3em .5em;
  border-radius: 8rpx;
  display: inline-flex;
  align-items: center;
}

.repo {
  position: relative;
}
.repo::after {
  content: "";
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 30rpx;
  right: 0;
  height: 1px;
  background-color: #B7B7B9;
  transform-origin: 0 100%;
  transform: scaleY(0.5) translateY(50%);
}
.repo:last-child::after {
  content: none;
}
