.page {
  height: 100vh;
  box-sizing: border-box;
}

.info {
  padding: 40rpx 30rpx;
  background-color: #fff;
}

.user {
  display: flex;
  align-items: center;
}

.avatar {
  margin-right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.fullname {
  font-weight: bold;
  font-size: 36rpx;
}

.username {
  font-size: 30rpx;
  color: #586069;
}

.joined {
  margin-top: 10rpx;
  color: #999;
  font-size: 28rpx;
}

.bio {
  margin-top: 10rpx;
  font-weight: 400;
  line-height: 1.2;
}

.counts {
  display: flex;
  background-color: #fff;
  position: relative;
}
.counts::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  border-top: 1px solid rgba(0,0,0,0.3);
  transform-origin: 0 0;
  transform: scaleY(0.5);
}
.counter {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  line-height: 1;
}
.counter-number {
  font-size: 34rpx;
  font-weight: bold;
}
.counter-name {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #555;
}