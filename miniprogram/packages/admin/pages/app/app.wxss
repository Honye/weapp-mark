.form {
  background-color: #fff;
  padding: 30rpx;
}

.item__label {
  font-size: 30rpx;
  color: #999;
}
.item__label::first-letter {
  text-transform: uppercase;
}
.item__input {
  margin-top: 12rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx;
  text-align: center;
}

.btn-submit {
  background-color: var(--color-primary);
  border: none;
  border-radius: 12rpx;
}
.btn-submit::after {
  content: none;
}