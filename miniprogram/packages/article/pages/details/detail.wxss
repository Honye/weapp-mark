/* pages/article/detail.wxss */
@import '/pages/common/share/share';

page {
  height: 100%;
}
.page-article>scroll-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.page-article .bg-title {
  width: 100%;
  position: relative;
  display: flex;
}
.page-article .bg-title>image{
  width: 100%;
  height: 370rpx;
}
.page-article .bg-title .gradient {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  z-index: 1;
  display: flex;
  align-items: flex-end;
  background: -webkit-gradient(linear, left 0, left 165%, color-stop(0,transparent), color-stop(1,#000000));  
  background: -moz-linear-gradient(top, transparent, #000000 165%);  
}
.page-article .bg-title .title {
  color: #fff;
  font-weight: bold;
  padding: 1em;
}

.page-article .writer {
  background-color: #fff;
  margin: 60rpx 30rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding: 1em 1em 0;
  box-shadow: 2rpx 2rpx #eee;
}
.page-article .writer>view {
  display: flex;
}
.page-article .writer>view image {
  width: 125rpx;
  height: 125rpx;
  border: 1px solid #eee;
  border-radius: 50%;
  margin-right: 1em;
}
.page-article .writer>view .personal {
  display: flex;
  flex: 1;
  flex-direction: column;
}
.page-article .writer>view .personal .name {
  font-weight: bold;
}
.page-article .writer>view .personal .motto {
  color: #ACB1B2;
  font-size: .9em;
}
.page-article .writer .footer {
  border-top: 1px solid #eee;
  display: flex;
  justify-content: center;
  margin-top: 1.5em;
  overflow: visible;
}
.page-article .writer .footer>text {
  font-size: .8em;
  position: relative;
  top: -.9em;
  background-color: #fff;
  padding: 0 .3em;
  color: #ACB1B2;
}

.page-article .content:not(.wxParse-div) {
    padding: 0 30rpx 30rpx;  
}
.page-article .content .wxParse-img {
  width: 100% !important;
}

/* 底部操作按钮 */
.bottom-actions {
  width: 100%;
  height: 50px;
  display: flex;
  background-color: #fff;
  position: relative;
}
.bottom-actions::before {
  content: ' ';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: .5px;
  background-color: #ccc;
}
.flex-1 {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.flex-1 .icon {
  width: 1.2em;
  height: 1.2em;
}
.flex-1>text {
  font-size: .8em;
  vertical-align: bottom;
  line-height: 1em;
  color: #496069;
  margin-top: .2em;
}