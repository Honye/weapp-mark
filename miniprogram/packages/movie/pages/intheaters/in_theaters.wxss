/* pages/intheaters/in_theaters.wxss */
@import '/pages/common/rating/rating';
@import '/pages/common/movie/movieRow';

page {
  height: 100%;
}
.page-theatre {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.page-theatre .navbar {
  position: absolute;
  width: 100%;
  top: 0;
  height: 3em;
  background-color: #DEDEDE;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: .5px solid #ccc;
}
.page-theatre .navbar > view {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #496069;
}
.page-theatre .navbar > view.active {
  border-bottom: 2px solid #3f3f3f;
  color: #3f3f3f;
}
.page-theatre .navbar .divider {
  margin: 0 1em;
  width: 1px;
  height: 1.5em;
  background-color: #ccc;
}

.page-theatre .swiper {
  flex: 1;
}
.page-theatre .swiper .content-container {
  width: 100%;
  height: 100%;
}
.page-theatre .swiper .content-container .boss {
  height: 74rpx;
  text-align: center;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page-theatre .swiper .content-container .content-item {
  height: 30vh;
}