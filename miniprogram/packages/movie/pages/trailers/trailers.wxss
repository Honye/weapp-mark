/* pages/trailers/trailers.wxss */
.page-trailers {
  height: 100vh;
}

.video {
  width: 100%;
  height: 450rpx;
}

.trailer-list {
  width: 100%;
  height: calc(100vh - 450rpx);
}

.trailer {
  display: flex;
  padding: 15rpx 25rpx;
  border-bottom: .5px solid #ddd;
}
.trailer .image {
  width: 250rpx;
  height: 178rpx;
  box-sizing: border-box;
  position: relative;
}
.trailer .title {
  flex: 1;
  margin-left: 25rpx;
}
.trailer.active .image::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border: 1px solid #F59624;
}
.trailer.active .title {
  color: #F59624;
}