page {
  background-color: #fff;
}

.form {
  padding-top: 80rpx;
}

.title {
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
}

.input-list {
  margin: 30rpx;
  margin-top: 60rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
}

.input {
  padding: 20rpx;
}
.input:not(:first-child) {
  border-top: 1px solid #eee;
}

.captcha {
  display: flex;
  align-items: center;
}
.captcha__input {
  flex: 1;
}
.captcha__code {
  flex-shrink: 0;
  width: 220rpx;
  height: 40rpx;
}

.btn-submit {
  margin: 30rpx;
  margin-top: 80rpx;
  background-color: #39b344;
  color: #fff;
  border: none;
  border-radius: 8rpx;
}
.btn-submit::after {
  content: none;
}
.btn-submit[disabled]:not([type]) {
  background-color: #39b344;
  color: #fff;
  opacity: 0.5;
}