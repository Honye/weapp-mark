/* pages/common/self/index.wxss */
.self-honye .banner {
  margin: 20rpx;
  box-sizing: border-box;
  background-color: #eee;
  line-height: 0;
  border-radius: 10rpx;
  overflow: hidden;
  height: 375rpx;
  box-shadow: 2px 2px 2px 1px #ddd;
}
.self-honye .banner>image {
  width: 100%;
  height: 100%;
}
.self-honye .blogger,
.self-honye .advert {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: .9em;
  line-height: 1.8em;
  box-shadow: 2px 2px 2px 1px #ddd;
}
.self-honye .blogger {
  color: #21BF8F;
}
.self-honye .advert {
  color: #46BAC5;
}