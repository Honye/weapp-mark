/* pages/movies/movies.wxss */
@import '../common/movie/movieRow';
@import '../common/dropmenu/dropmenu';

.page-movie {
  padding-top: 3em;
  height: 100%;
}

.page-movie .topbar {
  position: fixed;
  width: 100%;
  height: 3em;
  top: 0;
  z-index: 12;
  background-color: #fff;
  border-bottom: 0.5px solid #ccc;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.page-movie .topbar .layout > image {
  width: 1.5em;
  height: .8em;
}
.layout,
.sort {
  display: flex;
  align-items: center;
}
.sort>image {
  width: .8em;
  height: .8em;
  margin-left: .3em;
}

.content {
  position: relative;
  overflow: hidden;
  height: 100%;
}
.page-movie .movie-container {
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.page-movie .movie-container>view {
  width: 33.33%;
  display: -ms-inline-grid;
  border: 10rpx solid transparent;
  box-sizing: border-box;
}
