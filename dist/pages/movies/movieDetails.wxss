/* pages/movies/movieDetails.wxss */
@import '../common/rating/rating';
@import '../common/casts/casts';

image {
  width: 100%;
  height: 100%;
}
.page-detail .big-bg {
  height: 750rpx;
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% auto;
}
.big-bg>view {
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,.7);
}

.page-detail .scroll {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.page-detail .brief-time,
.page-detail .play-source,
.page-detail .brief-summary,
.page-detail .casts,
.page-detail .comments,
.page-detail .photos {
  background-color: #f7f7f7;
}
.bg-img .brief {
  width: 100%;
  height: 100%;
  display: flex;
  display: -webkit-flex;
  align-items: flex-end; 
}
.brief .img-mv {
  width:220rpx;
  height: 308rpx;
  margin:0rpx 30rpx -40rpx;
}
.brief .brief-info {
  color: #fff;
  margin-right: 30rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.brief-info .title {
  font-size: 1.2em;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.brief .rating {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
.brief .rating>text:first-child {
  display: flex;
  align-items: flex-end;
  font-size: 2em;
  vertical-align: bottom;
  padding: 0;
}
.brief .rating>view {
  color: #ccc;
  margin-left: 0.32em;
  margin-bottom: 0.32em;
  display: flex;
  flex-direction: column;
}
.com-rating .rating-on {
  color: #F4D02F;
}

.page-detail .brief-time {
  padding: 80rpx 30rpx 0;
}

.page-detail .play-source {
  padding-top: 2em;
}
.page-detail .play-source .source-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 2.4em;
  margin-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1px solid #ddd;
}
.page-detail .play-source .source-container .fa-play-circle {
  color: #9B9B9B;
  margin-right: .5em;
}
.page-detail .play-source .source-container .sources {
  color: #9E9E9E;
}
.page-detail .play-source .source-container .fa-angle-right {
  color: #CCCCCC;
  margin-left: .3em;
  font-size: 1.2em;
}

.page-detail .brief-summary {
  padding: 30rpx;
}
.subtitle {
  color: #7C858A;
  line-height: 2.8em;
  font-size: .9em;
}
.summary {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5; 
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}
.fold {
  color: #888888;
  font-size: .9em;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: .3em 0;
}
.fold::after {
  content: ' ';
  height: .5em;
  width: .5em;
  border-right: 1px solid #888;
  border-bottom: 1px solid #888;
  border-top: 1px solid transparent;
  border-left: 1px solid transparent;
  margin-left: .5em;
  margin-top: -0.35em;
  transform: rotate(45deg);
}
.fold.active::after {
  border-right: 1px solid transparent;
  border-bottom: 1px solid transparent;
  border-top: 1px solid #888;
  border-left: 1px solid #888;
  margin-top: 0.35em;
}
/* 影人 start */
.page-detail .casts .subtitle {
  margin-left: 30rpx;
}
.casts>scroll-view {
  white-space: nowrap;
}
.casts>scroll-view .casts-item {
  margin-right: 15rpx;
}
.casts>scroll-view .casts-item:first-child {
  margin-left: 30rpx;
}
.casts>scroll-view .casts-item:last-child {
  margin-right: 30rpx;
}

/* 预告片/剧照 */
.photos .subtitle {
  margin-left: 30rpx;
}
.photos>scroll-view {
  white-space: nowrap;
}
.trailer {
  width: 385rpx;
  height: 275rpx;
  position: relative;
  display: inline-block;
}
.trailer:not(:last-child) {
  margin-right: 15rpx; 
}
.trailer:first-child {
  margin-left: 30rpx;
}
.trailer:last-child {
  margin-right: 30rpx;
}
.front {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
}
.front>.icon {
  width: 1em;
  height: 1em;
  padding: .3em;
  background-color: rgba(0, 0, 0, .5);
  border: 1px solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
}

/* 短评 start */
.page-detail .comments {
  padding: 30rpx;
}
.comments .item-comment {
  margin-bottom: 1em;
}
.item-comment {
  display: flex;
  flex-direction: row;
}
.item-comment .user-header {
  width: 75rpx;
  height: 75rpx;
  background-color: #f7f7f7;
  overflow: hidden;
  border-radius: 50%;
}
.item-comment .comment-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.item-comment .comment-right .name-rating .username{
  margin-right: 0.2em;
}
.item-comment .comment-right .date {
  color: #bbb;
  font-size: 0.85em;
}

.page-detail .more {
  color: #5D6BEE;
  margin-left: 30rpx;
}
